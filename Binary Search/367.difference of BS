class Solution {
public:
    bool isPerfectSquare(int num) {
        int l , mid;
        int r = num;
        l = mid = 1;
        //won't go into loop
        if(num == 1) return true;
        
        while(l < r) <--------------------------difference
        {
            mid = (r - l)/2 + l;
            //int convert to double
            double i = double(num) / mid;
            if(i == double(mid))
                return true;
            else if(i > mid)
            {
                l = mid + 1;
            }
            else
            {
                r = mid -1;
            }
        }
        
        //final compare r and l
        double i = double(num) / r; <----------------difference
        if(i == l)
        {
            return true;
        }
        
        return false;
    }
};
